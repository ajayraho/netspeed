<Window x:Class="NetworkSpeedWidget.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Custom Scrollbar Style -->
        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="4"/>
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#FF555555"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                   CornerRadius="4"
                                                                   Margin="1,0"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF777777"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter Property="Background" Value="#FF999999"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollViewer Style -->
        <Style x:Key="CustomScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            
                            <ScrollBar Grid.Column="1" 
                                      Grid.Row="0"
                                      Name="PART_VerticalScrollBar"
                                      Orientation="Vertical"
                                      Value="{TemplateBinding VerticalOffset}"
                                      Maximum="{TemplateBinding ScrollableHeight}"
                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                      Style="{StaticResource CustomScrollBar}"
                                      Margin="2,0,2,0"/>
                            
                            <ScrollBar Grid.Column="0" 
                                      Grid.Row="1"
                                      Name="PART_HorizontalScrollBar"
                                      Orientation="Horizontal"
                                      Value="{TemplateBinding HorizontalOffset}"
                                      Maximum="{TemplateBinding ScrollableWidth}"
                                      ViewportSize="{TemplateBinding ViewportWidth}"
                                      Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                      Style="{StaticResource CustomScrollBar}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#FF2D2D30" 
            BorderBrush="#FF007ACC" 
            BorderThickness="2" 
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header (Draggable) -->
            <Border Grid.Row="0" 
                    Background="#FF007ACC" 
                    CornerRadius="6,6,0,0"
                    Padding="15,12"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="About Network Speed Widget" 
                              FontSize="14" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <Button Content="✕" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Width="20"
                           Height="20"
                           Background="Transparent"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="14"
                           FontWeight="Bold"
                           Cursor="Hand"
                           Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFF0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource CustomScrollViewer}">
                <StackPanel Margin="20,20,10,20">
                    <!-- App Logo -->
                    <Viewbox Width="100" Height="100" 
                            HorizontalAlignment="Center"
                            Margin="0,10,0,15">
                        <Canvas Width="120" Height="120">
                            <!-- Outer Ring -->
                            <Ellipse Width="120" Height="120" 
                                    Stroke="#FF007ACC"
                                    StrokeThickness="8"
                                    Fill="Transparent"/>
                            
                            <!-- Speed Gauge Arc (Top half with gradient effect using multiple arcs) -->
                            <Path Data="M 20,60 A 50,50 0 0,1 100,60" 
                                  Stroke="#FF00D7FF" 
                                  StrokeThickness="6"
                                  Fill="Transparent"/>
                            
                            <!-- Download Arrow (pointing down) -->
                            <Path Data="M 45,45 L 45,75 M 45,75 L 35,65 M 45,75 L 55,65" 
                                  Stroke="#FF00FF00" 
                                  StrokeThickness="5"/>
                            
                            <!-- Upload Arrow (pointing up) -->
                            <Path Data="M 75,75 L 75,45 M 75,45 L 65,55 M 75,45 L 85,55" 
                                  Stroke="#FFFF6B00" 
                                  StrokeThickness="5"/>
                            
                            <!-- Network Node Dots -->
                            <Ellipse Width="8" Height="8" Fill="White" Canvas.Left="56" Canvas.Top="56"/>
                            <Ellipse Width="6" Height="6" Fill="#FF007ACC" Canvas.Left="27" Canvas.Top="27"/>
                            <Ellipse Width="6" Height="6" Fill="#FF007ACC" Canvas.Left="87" Canvas.Top="27"/>
                            <Ellipse Width="6" Height="6" Fill="#FF007ACC" Canvas.Left="27" Canvas.Top="87"/>
                            <Ellipse Width="6" Height="6" Fill="#FF007ACC" Canvas.Left="87" Canvas.Top="87"/>
                        </Canvas>
                    </Viewbox>
                    
                    <TextBlock Text="Network Speed Widget" 
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Version 1.0.0" 
                              FontSize="12"
                              Foreground="#FF999999"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Description -->
                    <TextBlock Text="A modern, real-time network monitoring widget for Windows with process tracking, connection inspection, and statistics visualization." 
                              FontSize="12"
                              Foreground="#FFCCCCCC"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Features -->
                    <TextBlock Text="Features" 
                              FontSize="14"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,10,0,10"/>

                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="• Real-time network speed monitoring" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                        <TextBlock Text="• Process-level network usage tracking" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                        <TextBlock Text="• Active TCP connection inspector" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                        <TextBlock Text="• Real-time speed graphs and statistics" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                        <TextBlock Text="• Block/unblock network traffic per process" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                        <TextBlock Text="• System tray integration" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                    </StackPanel>

                    <!-- Technical Info -->
                    <TextBlock Text="Technical Details" 
                              FontSize="14"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,20,0,10"/>

                    <Grid Margin="10,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="Framework:" 
                                  FontSize="11"
                                  Foreground="#FF999999"
                                  Margin="0,3,10,3"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Text=".NET 9.0 WPF" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="Platform:" 
                                  FontSize="11"
                                  Foreground="#FF999999"
                                  Margin="0,3,10,3"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                  Text="Windows 10/11 (x64)" 
                                  FontSize="11"
                                  Foreground="#FFCCCCCC"
                                  Margin="0,3"/>
                    </Grid>

                    <!-- License -->
                    <TextBlock Text="License" 
                              FontSize="14"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,20,0,10"/>
                    
                    <TextBlock Text="MIT License - Free to use and modify" 
                              FontSize="11"
                              Foreground="#FFCCCCCC"
                              Margin="10,0,0,5"/>
                    
                    <TextBlock Text="Developed and designed by Ajit Kumar" 
                              FontSize="11"
                              Foreground="#FF999999"
                              Margin="10,0,0,0"/>
                    <TextBlock Text="Copyright © 2025 ajayraho productions. All rights reserved." 
                              FontSize="11"
                              Foreground="#FF999999"
                              Margin="10,0,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#FF252526"
                    Padding="15,12"
                    CornerRadius="0,0,6,6">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <!-- <Button Content="GitHub Repository" 
                           Width="140"
                           Height="32"
                           Background="#FF007ACC"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="GitHub_Click"
                           Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"
                                                                Margin="5"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF0098FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button> -->

                    <Button Content="Close" 
                           Width="80"
                           Height="32"
                           Background="#FF3E3E42"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="Close_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"
                                                                Margin="5"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF555555"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
