<Window x:Class="NetworkSpeedWidget.DetailedMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkSpeedWidget"
        xmlns:converters="clr-namespace:NetworkSpeedWidget.Converters"
        mc:Ignorable="d"
        Title="Network Monitor - Detailed View" 
        Height="600" 
        Width="900"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <converters:BlockedStateConverter x:Key="BlockedStateConverter"/>
        
        <!-- Custom Scrollbar Style -->
        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="4"/>
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#FF555555"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                   CornerRadius="4"
                                                                   Margin="1,0"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF777777"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter Property="Background" Value="#FF999999"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollViewer Style -->
        <Style x:Key="CustomScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            
                            <ScrollBar Grid.Column="1" 
                                      Grid.Row="0"
                                      Name="PART_VerticalScrollBar"
                                      Orientation="Vertical"
                                      Value="{TemplateBinding VerticalOffset}"
                                      Maximum="{TemplateBinding ScrollableHeight}"
                                      ViewportSize="{TemplateBinding ViewportHeight}"
                                      Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                      Style="{StaticResource CustomScrollBar}"
                                      Margin="2,0,2,0"/>
                            
                            <ScrollBar Grid.Column="0" 
                                      Grid.Row="1"
                                      Name="PART_HorizontalScrollBar"
                                      Orientation="Horizontal"
                                      Value="{TemplateBinding HorizontalOffset}"
                                      Maximum="{TemplateBinding ScrollableWidth}"
                                      ViewportSize="{TemplateBinding ViewportWidth}"
                                      Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                      Style="{StaticResource CustomScrollBar}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeView Style with Custom Scrollbar -->
        <Style x:Key="CustomTreeView" TargetType="TreeView">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TreeView">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               Background="{TemplateBinding Background}">
                            <ScrollViewer Style="{StaticResource CustomScrollViewer}"
                                         Focusable="False"
                                         Padding="{TemplateBinding Padding}"
                                         CanContentScroll="False"
                                         HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                         VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <TabControl Background="#FF1E1E1E" 
                    BorderThickness="0"
                    Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46"
                                        BorderThickness="1,1,1,0" 
                                        CornerRadius="4,4,0,0"
                                        Padding="15,8"
                                        Margin="2,0">
                                    <ContentPresenter ContentSource="Header" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- Processes Tab -->
            <TabItem Header="ðŸ“Š Processes">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#FF2D2D30" 
                            Padding="15,10"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Active Processes" 
                                          FontSize="16" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="ProcessCountText"
                                          Text="(0 apps, 0 processes)"
                                          FontSize="12"
                                          Foreground="#FF999999"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Right side buttons -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right">
                                <!-- About Button -->
                                <Button Content="?" 
                                       Width="30"
                                       Height="30"
                                       Background="#FF3E3E42"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Cursor="Hand"
                                       ToolTip="About"
                                       Margin="0,0,10,0"
                                       Click="About_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="5"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF007ACC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Blocked Processes Button -->
                                <Button Content="ðŸš« Blocked Processes" 
                                       Width="160"
                                       Height="30"
                                       Background="#FFFF9800"
                                       Foreground="White"
                                       BorderThickness="0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand"
                                       Click="OpenBlockedProcesses_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="5"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFFA726"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Column Headers -->
                    <Border Grid.Row="1" 
                            Background="#FF3E3E42" 
                            Padding="10,8"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <!-- Empty for arrow -->
                            <Border Grid.Column="0"/>
                            
                            <!-- Empty for icon -->
                            <Border Grid.Column="1"/>

                            <!-- Process Name Header -->
                            <TextBlock Grid.Column="2" 
                                      Text="Process Name" 
                                      FontWeight="Bold"
                                      FontSize="12"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Cursor="Hand"
                                      MouseDown="SortByName_MouseDown"/>

                            <!-- Count Header -->
                            <TextBlock Grid.Column="3" 
                                      Text="PID"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                            <!-- Download Header -->
                            <StackPanel Grid.Column="4" 
                                       Orientation="Horizontal"
                                       Margin="10,0,0,0"
                                       Cursor="Hand"
                                       Background="Transparent"
                                       MouseDown="SortAllByDownload_MouseDown">
                                <TextBlock Text="â†“ " 
                                          Foreground="#FF4CAF50"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Width="15"/>
                                <TextBlock Text="Download" 
                                          Foreground="#FFCCCCCC"
                                          FontWeight="Bold"
                                          FontSize="12"/>
                                <TextBlock x:Name="GlobalDownloadSortIcon"
                                          Text="" 
                                          Foreground="#FFAAAAAA"
                                          FontSize="10"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Upload Header -->
                            <StackPanel Grid.Column="5" 
                                       Orientation="Horizontal"
                                       Margin="10,0,0,0"
                                       Cursor="Hand"
                                       Background="Transparent"
                                       MouseDown="SortAllByUpload_MouseDown">
                                <TextBlock Text="â†‘ " 
                                          Foreground="#FFFF5722"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Width="15"/>
                                <TextBlock Text="Upload" 
                                          Foreground="#FFCCCCCC"
                                          FontWeight="Bold"
                                          FontSize="12"/>
                                <TextBlock x:Name="GlobalUploadSortIcon"
                                          Text="" 
                                          Foreground="#FFAAAAAA"
                                          FontSize="10"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Actions Header -->
                            <TextBlock Grid.Column="6" 
                                      Text="Actions"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- TreeView for grouped processes -->
                    <TreeView Grid.Row="2"
                             x:Name="ProcessTreeView"
                             Background="#FF252526"
                             BorderThickness="0"
                             Margin="10"
                             Style="{StaticResource CustomTreeView}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <StackPanel>
                                                <ContentPresenter x:Name="PART_Header" 
                                                                ContentSource="Header"
                                                                HorizontalAlignment="Stretch"/>
                                                <ItemsPresenter x:Name="ItemsHost"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="False">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>

                        <!-- Parent Group Template -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Instances}">
                                <!-- Group Row (Table-like layout) -->
                                <Border Background="#FF2D2D30" 
                                       Padding="10,8"
                                       Margin="0,1"
                                       BorderBrush="#FF3F3F46"
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="28"/>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Expander Arrow (Clickable) -->
                                        <TextBlock Grid.Column="0" 
                                                  FontSize="10"
                                                  Foreground="#FF999999"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Cursor="Hand"
                                                  MouseDown="ExpanderArrow_MouseDown">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="â–¶"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                            <Setter Property="Text" Value="â–¼"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Icon -->
                                        <Image Grid.Column="1" 
                                              Source="{Binding Icon}" 
                                              Width="18" 
                                              Height="18"
                                              VerticalAlignment="Center"/>

                                        <!-- Process Name -->
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding ProcessName}" 
                                                  FontWeight="Bold"
                                                  FontSize="13"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>

                                        <!-- Instance Count -->
                                        <TextBlock Grid.Column="3" 
                                                  Text="{Binding InstanceCount, StringFormat='({0})'}"
                                                  FontSize="11"
                                                  Foreground="#FF999999"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Total Download (Clickable for sorting) -->
                                        <StackPanel Grid.Column="4" 
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,0,0,0"
                                                   Cursor="Hand"
                                                   Background="Transparent"
                                                   MouseDown="SortByDownload_MouseDown">
                                            <TextBlock Text="â†“ " 
                                                      Foreground="#FF4CAF50"
                                                      FontWeight="Bold"
                                                      FontSize="12"
                                                      Width="15"/>
                                            <TextBlock Text="{Binding TotalDownloadSpeedFormatted}" 
                                                      Foreground="#FF4CAF50"
                                                      FontWeight="SemiBold"
                                                      FontSize="12"
                                                      Width="70"
                                                      TextAlignment="Left"/>
                                            <TextBlock Text="{Binding DownloadSortIcon}" 
                                                      Foreground="#FFAAAAAA"
                                                      FontSize="10"
                                                      Margin="2,0,0,0"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Total Upload (Clickable for sorting) -->
                                        <StackPanel Grid.Column="5" 
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,0,0,0"
                                                   Cursor="Hand"
                                                   Background="Transparent"
                                                   MouseDown="SortByUpload_MouseDown">
                                            <TextBlock Text="â†‘ " 
                                                      Foreground="#FFFF5722"
                                                      FontWeight="Bold"
                                                      FontSize="12"
                                                      Width="15"/>
                                            <TextBlock Text="{Binding TotalUploadSpeedFormatted}" 
                                                      Foreground="#FFFF5722"
                                                      FontWeight="SemiBold"
                                                      FontSize="12"
                                                      Width="70"
                                                      TextAlignment="Left"/>
                                            <TextBlock Text="{Binding UploadSortIcon}" 
                                                      Foreground="#FFAAAAAA"
                                                      FontSize="10"
                                                      Margin="2,0,0,0"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Actions for Group (All Instances) -->
                                        <StackPanel Grid.Column="6" 
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Center"
                                                   Margin="5,0,0,0">
                                            <!-- Block/Unblock All Button -->
                                            <Button Width="18" 
                                                   Height="18"
                                                   Margin="0,0,4,0"
                                                   Padding="0"
                                                   Background="#FF3E3E42"
                                                   BorderBrush="#FF555555"
                                                   BorderThickness="1"
                                                   Cursor="Hand"
                                                   ToolTip="{Binding ProcessName, Converter={StaticResource BlockedStateConverter}, ConverterParameter=Tooltip}"
                                                   Click="BlockNetworkGroup_Click"
                                                   Tag="{Binding}">
                                                <TextBlock Text="{Binding ProcessName, Converter={StaticResource BlockedStateConverter}, ConverterParameter=Icon}" 
                                                          FontSize="10"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                           CornerRadius="3">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFFF9800"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <!-- End All Button -->
                                            <Button Width="18" 
                                                   Height="18"
                                                   Padding="0"
                                                   Background="#FF3E3E42"
                                                   BorderBrush="#FF555555"
                                                   BorderThickness="1"
                                                   Cursor="Hand"
                                                   ToolTip="End All Instances"
                                                   Click="EndTaskGroup_Click"
                                                   Tag="{Binding}">
                                                <TextBlock Text="âŒ" 
                                                          FontSize="10"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                           CornerRadius="3">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFF44336"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Child Instance Template -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF1E1E1E" 
                                               Padding="10,6"
                                               Margin="0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="28"/>
                                                    <ColumnDefinition Width="220"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="80"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Empty space for alignment -->
                                                <Border Grid.Column="0"/>
                                                <Border Grid.Column="1"/>

                                                <!-- Process Name + PID -->
                                                <TextBlock Grid.Column="2" 
                                                          Margin="20,0,0,0"
                                                          VerticalAlignment="Center">
                                                    <Run Text="{Binding ProcessName}" 
                                                         Foreground="#FFAAAAAA"
                                                         FontSize="11"/>
                                                    <Run Text=" #" 
                                                         Foreground="#FF666666"
                                                         FontSize="10"/>
                                                    <Run Text="{Binding ProcessId}" 
                                                         Foreground="#FF666666"
                                                         FontSize="10"/>
                                                </TextBlock>

                                                <!-- Empty for count -->
                                                <Border Grid.Column="3"/>

                                                <!-- Download (Aligned) -->
                                                <StackPanel Grid.Column="4" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Left"
                                                           Margin="25,0,0,0">
                                                    <TextBlock Text="{Binding DownloadSpeedFormatted}" 
                                                              Foreground="#FF4CAF50"
                                                              FontSize="11"
                                                              Width="90"
                                                              TextAlignment="Left"/>
                                                </StackPanel>

                                                <!-- Upload (Aligned) -->
                                                <StackPanel Grid.Column="5" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Left"
                                                           Margin="25,0,0,0">
                                                    <TextBlock Text="{Binding UploadSpeedFormatted}" 
                                                              Foreground="#FFFF5722"
                                                              FontSize="11"
                                                              Width="90"
                                                              TextAlignment="Left"/>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="6" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Center"
                                                           Margin="5,0,0,0">
                                                    <!-- Block/Unblock Network Button -->
                                                    <Button Width="18" 
                                                           Height="18"
                                                           Margin="0,0,4,0"
                                                           Padding="0"
                                                           Background="#FF3E3E42"
                                                           BorderBrush="#FF555555"
                                                           BorderThickness="1"
                                                           Cursor="Hand"
                                                           ToolTip="{Binding ProcessName, Converter={StaticResource BlockedStateConverter}, ConverterParameter=Tooltip}"
                                                           Click="BlockNetwork_Click"
                                                           Tag="{Binding}">
                                                        <TextBlock Text="{Binding ProcessName, Converter={StaticResource BlockedStateConverter}, ConverterParameter=Icon}" 
                                                                  FontSize="10"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"/>
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                                   CornerRadius="3">
                                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                                VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FFFF9800"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>

                                                    <!-- End Task Button -->
                                                    <Button Width="18" 
                                                           Height="18"
                                                           Padding="0"
                                                           Background="#FF3E3E42"
                                                           BorderBrush="#FF555555"
                                                           BorderThickness="1"
                                                           Cursor="Hand"
                                                           ToolTip="End Task"
                                                           Click="EndTask_Click"
                                                           Tag="{Binding}">
                                                        <TextBlock Text="âŒ" 
                                                                  FontSize="10"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Center"/>
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                                   CornerRadius="3">
                                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                                VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FFF44336"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </TabItem>

            <!-- Connections Tab -->
            <TabItem Header="ðŸŒ Connections">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#FF2D2D30" 
                            Padding="15,10"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Active Connections" 
                                          FontSize="16" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="ConnectionCountText"
                                          Text="(0 processes, 0 connections)"
                                          FontSize="12"
                                          Foreground="#FF999999"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Column Headers -->
                    <Border Grid.Row="1" 
                            Background="#FF3E3E42" 
                            Padding="10,8"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"/>

                            <TextBlock Grid.Column="1" 
                                      Text="Process Name" 
                                      FontWeight="Bold"
                                      FontSize="12"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"/>

                            <TextBlock Grid.Column="2" 
                                      Text="Connections"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                            <TextBlock Grid.Column="3" 
                                      Text="Remote Address / Host"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Connections TreeView -->
                    <TreeView Grid.Row="2"
                             x:Name="ConnectionsTreeView"
                             Background="#FF252526"
                             BorderThickness="0"
                             Margin="10"
                             Style="{StaticResource CustomTreeView}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <StackPanel>
                                                <ContentPresenter x:Name="PART_Header" 
                                                                ContentSource="Header"
                                                                HorizontalAlignment="Stretch"/>
                                                <ItemsPresenter x:Name="ItemsHost"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="False">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>

                        <!-- Process Group Template -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Connections}">
                                <!-- Process Row -->
                                <Border Background="#FF2D2D30" 
                                       Padding="10,8"
                                       Margin="0,1"
                                       BorderBrush="#FF3F3F46"
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="250"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Expander Arrow -->
                                        <TextBlock Grid.Column="0" 
                                                  FontSize="10"
                                                  Foreground="#FF999999"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Cursor="Hand"
                                                  MouseDown="ConnectionExpander_MouseDown">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="â–¶"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                            <Setter Property="Text" Value="â–¼"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Process Name -->
                                        <StackPanel Grid.Column="1" 
                                                   Orientation="Horizontal"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0">
                                            <TextBlock Text="{Binding ProcessName}" 
                                                      FontWeight="Bold"
                                                      FontSize="13"
                                                      Foreground="White"/>
                                            <TextBlock Text=" #" 
                                                      Foreground="#FF666666"
                                                      FontSize="11"
                                                      Margin="5,0,0,0"/>
                                            <TextBlock Text="{Binding ProcessId}" 
                                                      Foreground="#FF666666"
                                                      FontSize="11"/>
                                        </StackPanel>

                                        <!-- Connection Count -->
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding ConnectionCount}"
                                                  FontSize="13"
                                                  FontWeight="SemiBold"
                                                  Foreground="#FF4CAF50"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Connection Item Template -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF1E1E1E" 
                                               Padding="10,6"
                                               Margin="0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="250"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Empty -->
                                                <Border Grid.Column="0"/>
                                                <Border Grid.Column="1"/>

                                                <!-- Protocol & State -->
                                                <StackPanel Grid.Column="2"
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding Protocol}" 
                                                              Foreground="#FF999999"
                                                              FontSize="10"
                                                              Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding State}" 
                                                              Foreground="#FF666666"
                                                              FontSize="10"/>
                                                </StackPanel>

                                                <!-- Remote Address/Host -->
                                                <TextBlock Grid.Column="3" 
                                                          Text="{Binding DisplayText}"
                                                          Foreground="#FFAAAAAA"
                                                          FontSize="11"
                                                          VerticalAlignment="Center"
                                                          Margin="10,0,0,0"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="ðŸ“ˆ Statistics">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#FF2D2D30" 
                            Padding="15,10"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="Network Statistics" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                            
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right">
                                <TextBlock Text="Time Range:" 
                                          FontSize="12"
                                          Foreground="#FFCCCCCC"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                <ComboBox x:Name="TimeRangeComboBox"
                                         Width="120"
                                         Height="28"
                                         FontSize="12"
                                         SelectedIndex="0"
                                         SelectionChanged="TimeRange_SelectionChanged">
                                    <ComboBoxItem Content="Last 60 seconds"/>
                                    <ComboBoxItem Content="Last 5 minutes"/>
                                    <ComboBoxItem Content="Last 30 minutes"/>
                                    <ComboBoxItem Content="Last hour"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Charts Area -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource CustomScrollViewer}"
                                 Padding="15">
                        <StackPanel>
                            <!-- Real-time Speed Chart -->
                            <Border Background="#FF2D2D30" 
                                   CornerRadius="6"
                                   Padding="15"
                                   Margin="0,0,0,15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="250"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                              Text="Real-time Network Speed" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              Margin="0,0,0,10"/>

                                    <Canvas Grid.Row="1" 
                                           x:Name="SpeedChart"
                                           Background="#FF1E1E1E"
                                           ClipToBounds="True"/>
                                </Grid>
                            </Border>

                            <!-- Summary Statistics -->
                            <Border Background="#FF2D2D30" 
                                   CornerRadius="6"
                                   Padding="15"
                                   Margin="0,0,0,15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                              Text="Session Summary" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              Margin="0,0,0,15"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Total Downloaded -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Total Downloaded" 
                                                      FontSize="11"
                                                      Foreground="#FF999999"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalDownloadedText"
                                                      Text="0 B" 
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#FF4CAF50"/>
                                        </StackPanel>

                                        <!-- Total Uploaded -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Total Uploaded" 
                                                      FontSize="11"
                                                      Foreground="#FF999999"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="TotalUploadedText"
                                                      Text="0 B" 
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#FFFF5722"/>
                                        </StackPanel>

                                        <!-- Peak Download -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Peak Download" 
                                                      FontSize="11"
                                                      Foreground="#FF999999"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="PeakDownloadText"
                                                      Text="0 B/s" 
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#FF4CAF50"/>
                                        </StackPanel>

                                        <!-- Peak Upload -->
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="Peak Upload" 
                                                      FontSize="11"
                                                      Foreground="#FF999999"
                                                      Margin="0,0,0,5"/>
                                            <TextBlock x:Name="PeakUploadText"
                                                      Text="0 B/s" 
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="#FFFF5722"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
