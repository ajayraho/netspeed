<Window x:Class="NetworkSpeedWidget.DetailedMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkSpeedWidget"
        mc:Ignorable="d"
        Title="Network Monitor - Detailed View" 
        Height="600" 
        Width="900"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Grid>
        <TabControl Background="#FF1E1E1E" 
                    BorderThickness="0"
                    Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" 
                                        Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46"
                                        BorderThickness="1,1,1,0" 
                                        CornerRadius="4,4,0,0"
                                        Padding="15,8"
                                        Margin="2,0">
                                    <ContentPresenter ContentSource="Header" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF3E3E42"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </TabControl.Resources>

            <!-- Processes Tab -->
            <TabItem Header="ðŸ“Š Processes">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="#FF2D2D30" 
                            Padding="15,10"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active Processes" 
                                      FontSize="16" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="ProcessCountText"
                                      Text="(0 apps, 0 processes)"
                                      FontSize="12"
                                      Foreground="#FF999999"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Column Headers -->
                    <Border Grid.Row="1" 
                            Background="#FF3E3E42" 
                            Padding="10,8"
                            BorderBrush="#FF3F3F46"
                            BorderThickness="0,0,0,1">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <!-- Empty for arrow -->
                            <Border Grid.Column="0"/>
                            
                            <!-- Empty for icon -->
                            <Border Grid.Column="1"/>

                            <!-- Process Name Header -->
                            <TextBlock Grid.Column="2" 
                                      Text="Process Name" 
                                      FontWeight="Bold"
                                      FontSize="12"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      Margin="8,0,0,0"
                                      Cursor="Hand"
                                      MouseDown="SortByName_MouseDown"/>

                            <!-- Count Header -->
                            <TextBlock Grid.Column="3" 
                                      Text="PID"
                                      FontSize="11"
                                      FontWeight="Bold"
                                      Foreground="#FFCCCCCC"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                            <!-- Download Header -->
                            <StackPanel Grid.Column="4" 
                                       Orientation="Horizontal"
                                       Margin="10,0,0,0"
                                       Cursor="Hand"
                                       Background="Transparent"
                                       MouseDown="SortAllByDownload_MouseDown">
                                <TextBlock Text="â†“ " 
                                          Foreground="#FF4CAF50"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Width="15"/>
                                <TextBlock Text="Download" 
                                          Foreground="#FFCCCCCC"
                                          FontWeight="Bold"
                                          FontSize="12"/>
                                <TextBlock x:Name="GlobalDownloadSortIcon"
                                          Text="" 
                                          Foreground="#FFAAAAAA"
                                          FontSize="10"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Upload Header -->
                            <StackPanel Grid.Column="5" 
                                       Orientation="Horizontal"
                                       Margin="10,0,0,0"
                                       Cursor="Hand"
                                       Background="Transparent"
                                       MouseDown="SortAllByUpload_MouseDown">
                                <TextBlock Text="â†‘ " 
                                          Foreground="#FFFF5722"
                                          FontWeight="Bold"
                                          FontSize="12"
                                          Width="15"/>
                                <TextBlock Text="Upload" 
                                          Foreground="#FFCCCCCC"
                                          FontWeight="Bold"
                                          FontSize="12"/>
                                <TextBlock x:Name="GlobalUploadSortIcon"
                                          Text="" 
                                          Foreground="#FFAAAAAA"
                                          FontSize="10"
                                          Margin="5,0,0,0"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- TreeView for grouped processes -->
                    <TreeView Grid.Row="2"
                             x:Name="ProcessTreeView"
                             Background="#FF252526"
                             BorderThickness="0"
                             Margin="10"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TreeViewItem">
                                            <StackPanel>
                                                <ContentPresenter x:Name="PART_Header" 
                                                                ContentSource="Header"
                                                                HorizontalAlignment="Stretch"/>
                                                <ItemsPresenter x:Name="ItemsHost"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsExpanded" Value="False">
                                                    <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>

                        <!-- Parent Group Template -->
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Instances}">
                                <!-- Group Row (Table-like layout) -->
                                <Border Background="#FF2D2D30" 
                                       Padding="10,8"
                                       Margin="0,1"
                                       BorderBrush="#FF3F3F46"
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="28"/>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Expander Arrow (Clickable) -->
                                        <TextBlock Grid.Column="0" 
                                                  Text="â–¶" 
                                                  FontSize="10"
                                                  Foreground="#FF999999"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Cursor="Hand"
                                                  MouseDown="ExpanderArrow_MouseDown">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                            <Setter Property="Text" Value="â–¼"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Icon -->
                                        <Image Grid.Column="1" 
                                              Source="{Binding Icon}" 
                                              Width="18" 
                                              Height="18"
                                              VerticalAlignment="Center"/>

                                        <!-- Process Name -->
                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding ProcessName}" 
                                                  FontWeight="Bold"
                                                  FontSize="13"
                                                  Foreground="White"
                                                  VerticalAlignment="Center"
                                                  Margin="8,0,0,0"/>

                                        <!-- Instance Count -->
                                        <TextBlock Grid.Column="3" 
                                                  Text="{Binding InstanceCount, StringFormat='({0})'}"
                                                  FontSize="11"
                                                  Foreground="#FF999999"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                        <!-- Total Download (Clickable for sorting) -->
                                        <StackPanel Grid.Column="4" 
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,0,0,0"
                                                   Cursor="Hand"
                                                   Background="Transparent"
                                                   MouseDown="SortByDownload_MouseDown">
                                            <TextBlock Text="â†“ " 
                                                      Foreground="#FF4CAF50"
                                                      FontWeight="Bold"
                                                      FontSize="12"
                                                      Width="15"/>
                                            <TextBlock Text="{Binding TotalDownloadSpeedFormatted}" 
                                                      Foreground="#FF4CAF50"
                                                      FontWeight="SemiBold"
                                                      FontSize="12"
                                                      Width="70"
                                                      TextAlignment="Left"/>
                                            <TextBlock Text="{Binding DownloadSortIcon}" 
                                                      Foreground="#FFAAAAAA"
                                                      FontSize="10"
                                                      Margin="2,0,0,0"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Total Upload (Clickable for sorting) -->
                                        <StackPanel Grid.Column="5" 
                                                   Orientation="Horizontal"
                                                   HorizontalAlignment="Left"
                                                   Margin="10,0,0,0"
                                                   Cursor="Hand"
                                                   Background="Transparent"
                                                   MouseDown="SortByUpload_MouseDown">
                                            <TextBlock Text="â†‘ " 
                                                      Foreground="#FFFF5722"
                                                      FontWeight="Bold"
                                                      FontSize="12"
                                                      Width="15"/>
                                            <TextBlock Text="{Binding TotalUploadSpeedFormatted}" 
                                                      Foreground="#FFFF5722"
                                                      FontWeight="SemiBold"
                                                      FontSize="12"
                                                      Width="70"
                                                      TextAlignment="Left"/>
                                            <TextBlock Text="{Binding UploadSortIcon}" 
                                                      Foreground="#FFAAAAAA"
                                                      FontSize="10"
                                                      Margin="2,0,0,0"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Child Instance Template -->
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF1E1E1E" 
                                               Padding="10,6"
                                               Margin="0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="28"/>
                                                    <ColumnDefinition Width="220"/>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Empty space for alignment -->
                                                <Border Grid.Column="0"/>
                                                <Border Grid.Column="1"/>

                                                <!-- Process Name + PID -->
                                                <TextBlock Grid.Column="2" 
                                                          Margin="20,0,0,0"
                                                          VerticalAlignment="Center">
                                                    <Run Text="{Binding ProcessName}" 
                                                         Foreground="#FFAAAAAA"
                                                         FontSize="11"/>
                                                    <Run Text=" #" 
                                                         Foreground="#FF666666"
                                                         FontSize="10"/>
                                                    <Run Text="{Binding ProcessId}" 
                                                         Foreground="#FF666666"
                                                         FontSize="10"/>
                                                </TextBlock>

                                                <!-- Empty for count -->
                                                <Border Grid.Column="3"/>

                                                <!-- Download (Aligned) -->
                                                <StackPanel Grid.Column="4" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Left"
                                                           Margin="25,0,0,0">
                                                    <TextBlock Text="{Binding DownloadSpeedFormatted}" 
                                                              Foreground="#FF4CAF50"
                                                              FontSize="11"
                                                              Width="90"
                                                              TextAlignment="Left"/>
                                                </StackPanel>

                                                <!-- Upload (Aligned) -->
                                                <StackPanel Grid.Column="5" 
                                                           Orientation="Horizontal"
                                                           HorizontalAlignment="Left"
                                                           Margin="25,0,0,0">
                                                    <TextBlock Text="{Binding UploadSpeedFormatted}" 
                                                              Foreground="#FFFF5722"
                                                              FontSize="11"
                                                              Width="90"
                                                              TextAlignment="Left"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </TabItem>

            <!-- Network Interfaces Tab -->
            <TabItem Header="ðŸŒ Interfaces">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <TextBlock Text="Network Interfaces (Coming Soon)" 
                              FontSize="16" 
                              Foreground="#FF999999"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>
            </TabItem>

            <!-- Statistics Tab -->
            <TabItem Header="ðŸ“ˆ Statistics">
                <Grid Background="#FF252526" Margin="0,5,0,0">
                    <TextBlock Text="Network Statistics (Coming Soon)" 
                              FontSize="16" 
                              Foreground="#FF999999"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
